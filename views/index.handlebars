<div class="container">
  <h1>Eat Da Burger App!</h1>

  <div class="row justify-content-center">
    <img src="assets/img/burger-icon.png">
  </div>

  <div class="row justify-content-center">

    <div class="col-md-6 not-devoured">
      {{#each burger_data}} {{#unless this.devoured}}
      <div class="row justify-content-center">
        <p>
          {{this.id}}.{{this.burger_name}}
          <br>
          <br>
          <form class="eat button-size">
            <input input type="hidden" class="burger_id" type="text" value={{this.id}}>
            <button type="submit" class="btn btn-default">Devour it!</button>
          </form>
        </p>
      </div>
      {{/unless}} {{/each}}
    </div>

    <div class="col-md-6" id="devoured">
      {{#each burger_data}} {{#if this.devoured}}
      <div class="row justify-content-center">
        <p>
          {{this.burger_name}}
        </p>
      </div>
      {{/if}} {{/each}}
    </div>

  </div>

  <div class="row justify-content-center">
    <br>
    <form>
      <div class="form-group" action="/burgers/create" method="POST">
        <label for="burger-text-area"></label>
        <input type="text" class="form-control" id="burger-text-area" rows="4">
        </textarea>
      </div>
      <button type="submit" class="btn btn-light">Submit</button>
    </form>
  </div>

</div>